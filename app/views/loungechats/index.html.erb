# encoding: utf-8
<% if current_user %>
	<div class="container_12">
		<div class="body row">
			<aside  class="userlist col scroll-y">
				<ul id="userlist" data-me="<%= current_user.name %>" data-bind="foreach: sortedUsers">
					<li data-bind="css: userStyle, text: name"></li>
				</ul>
			</aside>

			<div id="output" class="content col scroll-y" data-bind="foreach: {data: messages, afterAdd: scrollBottom}">
				<p class="output" data-bind="css: type, html: message"></p>
			</div>
		</div>
		
		<footer class="messagebox row"> 
			<form class="chat" data-bind="submit: postMessage">
				<textarea autofocus="autofocus" data-bind="enable: isOnline, value: currentMessage, returnKey: postMessage, tabKey: tabCompletion" placeholder="Write your message, and press [Enter] to send or [Shift]+[Enter] for newline."></textarea>
			</form>
		</footer>
	</div>	
<% end %>
